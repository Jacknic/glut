<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary">

            <ImageView
                android:id="@+id/jw_iv_header_bg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@drawable/round_bg_white"
                android:src="@drawable/ic_account_circle"
                android:tint="?attr/colorPrimary" />

            <ImageView
                android:id="@+id/jw_iv_header"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:padding="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/jw_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jw_iv_header_bg"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/jw_tv_name"
                android:background="@color/primaryBackgroundTran"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jw_tv_className"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/white" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/jw_tv_sid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>

        </RelativeLayout>

        <!--阴影效果图-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:rotation="180"
            android:src="@drawable/bg_shadow"
            android:tint="?attr/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--学籍信息-->
            <TextView
                android:id="@+id/tv_xueji"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/selector_item_white"
                android:drawableRight="@drawable/ic_keyboard_arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="学籍信息" />

            <ImageView
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_school"
                android:tint="@color/teal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/list_item_height"
                android:background="@color/press" />


            <!--/学籍信息-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--学业进度-->
            <TextView
                android:id="@+id/tv_xueye"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/selector_item_white"
                android:drawableRight="@drawable/ic_keyboard_arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="学业进度" />

            <ImageView
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:padding="10dp"
                android:src="@drawable/ic_assignment_turned_in"
                android:tint="@color/blueLight" />
            <!--/学业进度-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_kaoshi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/selector_item_white"
                android:drawableRight="@drawable/ic_keyboard_arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="考试安排" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:padding="10dp"
                android:src="@drawable/ic_border_color"
                android:tint="@color/pink" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/list_item_height"
                android:background="@color/press" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_chengji"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/selector_item_white"
                android:drawableRight="@drawable/ic_keyboard_arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="成绩查询" />

            <ImageView
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:padding="10dp"
                android:src="@drawable/ic_check_circle"
                android:tint="@color/green" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/selector_item_white"
                android:drawableRight="@drawable/ic_keyboard_arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="设置" />

            <ImageView
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_settings"
                android:tint="@color/blueLight" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
