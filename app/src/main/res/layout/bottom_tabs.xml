<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_tabs_iv_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_event_note"
            android:tint="@color/inactive" />

        <TextView
            android:id="@+id/bottom_tabs_tv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:text="课表"
            android:textColor="@color/inactive"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_tabs_iv_financial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_account_balance_wallet"
            android:tint="@color/inactive" />

        <TextView
            android:id="@+id/bottom_tabs_tv_financial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:text="@string/txt_financial"
            android:textColor="@color/inactive"
            android:textSize="@dimen/bottom_tabs_textSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_tabs_iv_library"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_library_books"
            android:tint="@color/inactive" />

        <TextView
            android:id="@+id/bottom_tabs_tv_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:text="@string/txt_library"
            android:textColor="@color/inactive"
            android:textSize="@dimen/bottom_tabs_textSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_tabs_iv_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_account_circle"
            android:tint="@color/inactive" />

        <TextView
            android:id="@+id/bottom_tabs_tv_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:text="@string/txt_mine"
            android:textColor="@color/inactive"
            android:textSize="@dimen/bottom_tabs_textSize" />
    </LinearLayout>


</LinearLayout>
