<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setting_tv_select_theme_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_item_white"
                android:clickable="true"
                android:drawableRight="@drawable/ic_keyboard_arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="主题颜色" />

            <ImageView
                android:id="@+id/setting_iv_select_theme_color"
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_marginTop="@dimen/list_item_negative_height"
                android:padding="10dp"
                android:src="?attr/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/setting_sw_money_warning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_item_white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="一卡通余额过低提醒"
                android:textColor="@color/gray"
                app:thumbTint="@color/selector_thumb_tint"
                app:trackTint="@color/selector_thumb_tint"/>

            <ImageView
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_marginTop="@dimen/list_item_negative_height"
                android:padding="10dp"
                android:src="@drawable/ic_warn"
                android:tint="@color/blueLight"/>

        </LinearLayout>

        <include layout="@layout/div_line" />

        <LinearLayout
            android:id="@+id/setting_ll_warn_limit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:orientation="horizontal"
            android:background="@drawable/selector_item_white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_attach_money"
                android:padding="12dp"
                android:tint="@color/cyan" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/selector_item_white"
                android:gravity="left|center_vertical"
                android:text="提醒额度"
                />

            <TextView
                android:id="@+id/setting_tv_money_limit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_item_white"
                android:gravity="center"
                tool:text="50元"
                android:padding="8dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setting_tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_item_white"
                android:clickable="true"
                android:drawableRight="@drawable/ic_keyboard_arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="用户反馈" />

            <ImageView
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_marginTop="@dimen/list_item_negative_height"
                android:padding="10dp"
                android:src="@drawable/ic_comment"
                android:tint="@color/blueLight" />
        </LinearLayout>

        <include layout="@layout/div_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setting_tv_feedbackDeal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_item_white"
                android:clickable="true"
                android:drawableRight="@drawable/ic_keyboard_arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="反馈进度" />

            <ImageView
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_marginTop="@dimen/list_item_negative_height"
                android:padding="10dp"
                android:src="@drawable/ic_help_outline"
                android:tint="@color/cyan" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setting_tv_updateTips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_item_white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="更新提醒" />

            <ImageView
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/list_item_negative_height"
                android:padding="10dp"
                android:src="@drawable/ic_alert_update"
                android:tint="@color/amber" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/setting_sw_auto_check"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:thumbTint="@color/selector_thumb_tint"
                app:trackTint="@color/selector_thumb_tint" />
        </RelativeLayout>

        <include layout="@layout/div_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setting_tv_checkUpdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_item_white"
                android:clickable="true"
                android:drawableRight="@drawable/ic_keyboard_arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/list_item_height"
                android:text="检查更新 v" />

            <ImageView
                android:layout_width="@dimen/list_item_height"
                android:layout_height="@dimen/list_item_height"
                android:layout_marginTop="@dimen/list_item_negative_height"
                android:padding="10dp"
                android:src="@drawable/ic_update"
                android:tint="@color/greenLight" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>