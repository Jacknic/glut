<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jw_tv_school_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="学年"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/jw_tv_semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="学期"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/jw_tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="周数"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/jw_iv_toggle"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:src="@drawable/ic_add"
            android:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:visibility="gone">

        <android.support.design.widget.TabLayout
            android:id="@+id/lv_select_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/white"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/cary" />

        <ImageView
            android:id="@+id/kc_iv_course_setting"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_item_tran"
            android:padding="8dp"
            android:src="@drawable/ic_edit_location"
            android:tint="@color/white" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/course_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="none">


        <com.jacknic.glut.widget.CourseTableView
            android:id="@+id/table_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </com.jacknic.glut.widget.CourseTableView>
    </ScrollView>
</LinearLayout>
